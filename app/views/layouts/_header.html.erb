<header id="header">
  <%= image_tag("logo.jpg", :alt => "Market List Logo", :class => "round", :height => "100px") %>
  <nav class="round">
    <ul>
      <% if signed_in? %>
        <li><%= link_to "Home", home_path %></li>
      <% end %>
      <% if signed_in? %>
        <li><%= link_to "My Account", current_user %></li>
      <% end %>
      <li><%= link_to "Help", contact_path %></li>
      <% if admin? %>
        <li><%= link_to "Administer Site", admin_path %></li>
      <% end %>
      <% if signed_in? %>
        <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
      
    </ul>
  </nav>
</header>