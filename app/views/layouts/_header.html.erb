<header>
   <div class="logo">
      <%= image_tag(@market.logo_url, :alt => "Market List Logo", :class => "round", :height => "100px") %>
    </div>
  <nav class="round navigation">
    <ul>
      <% if signed_in? %>
        <li><%= link_to "Home", home_path %></li>
      <% end %>
      <% if signed_in? %>
        <li><%= link_to "My Account", current_user %></li>
      <% end %>
      <li><%= link_to "Help", contact_path %></li>
      <% if admin? %>
        <li><%= link_to "Administer Site", admin_path %></li>
      <% end %>
      <% if signed_in? %>
        <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
      
    </ul>
  </nav>
</header>