<h1>Invoices</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>User</th>
    <th>Order list</th>
    <th></th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.user.name %></td>
    <td><%= invoice.order_list.delivery_start.strftime('%x') %></td>
    <td><%= link_to 'Show', user_invoice_path(@user,invoice) %></td>
  </tr>
<% end %>
</table>
