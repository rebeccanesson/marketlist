<%= render :partial => 'common/breadcrumbs', :object => [['Administer Site', admin_path], ['All Product Families', product_families_path], "Edit #{@product_family.name}"] %>

<div class="row">
<h1>Edit Product Family</h1><br />
</div>

<div class="row">
<%= render 'form' %>
</div>

<p><%= link_to 'Add a new product', new_product_family_product_path(@product_family), :class => "btn btn-primary"%></p>

<div class="row">
<table class="table table-striped table-bordered">
<% @product_family.products.each do |product| %>
  <%= render product %>
<% end %>
</table>
</div>