<% if @order_list.order_end - @order_list.order_start <= 1.day %>
Ordering day: <%= @order_list.order_start.strftime("%A, %b %e") %>
<% else %>
Ordering period: <%= @order_list.order_start.strftime("%A, %b %e") %> - <%= (@order_list.order_end - 1.day).strftime("%A, %b %e") %>
<% end %>
<br />

For delivery between <%= @order_list.delivery_start.strftime("%A, %b %e at %l:%M%p") %> and <%= @order_list.delivery_end.strftime("%A, %b %e at %l:%M%p") %><br />

<br />
<% @order_list.order_listings_for_user(@user).group_by(&:product_family).each do |family,listings| %>        
  <br /><%= family.name.upcase %><br/>
  <% listings.each do |order_listing| %>
    * <%= order_listing.total_commitments_available %> <%= order_listing.orderables.collect { |o| o.name_for_user(@user) + " (" + number_to_currency(o.price_for_user(@user)) + ")" }.join(" OR ") %></br>
  <% end %>

<% end %>